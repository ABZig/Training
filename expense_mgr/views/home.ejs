<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <%- include('./partials/header.ejs') %>
</head>
<body>
    <a href="/logout"><button class="btn-info mx-5 my-3" type="submit" style="float: right;">logout</button></a>
    <div class="container" >
        <div class="form-title-home text-center">
            <h2 class="text-dark my-5"><h1>All Accounts</h1></h2>
        </div>
    <form action="/addaccount" method="post">
        <div class="form-row">
              <label for="validationServer01"></label>
              <input type="text" class="form-control is-valid col-md-8" id="validationServer01" name="accountname" placeholder="Name"><br>
              <button class="btn-info mx-4 px-3" type="submit"> Add Account </button>
        </div>
    </form>
  
    <main id="site-main">
        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="m-5 pb-5">
                    <form>
                        <div id="account-table">
                        <table class="table">
                            <thead class="thred-dark">
                                <tr>
                                    <th scope="col">Account-Name</th>
                                    <th colspan="3" class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(result.length > 0 ){ result.forEach(function(data){ %>
                                <tr> 
                                    <td>
                                        <%= data.accountname %>
                                    </td>
                                    <% if(data.accountname === userDetails.firstname + ' (Default) ') { %>
                                        <td></td>
                                        <td></td>
                                    <%}
                                    else{%>
                                    <td>
                                        <a href="/update-account/<%= data._id %>" class="btn border-shadow update">
                                        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/delete/<%= data._id %>" class="btn border-shadow update" 
                                        onclick="confirm('Are you sure you want to delete this record?')">
                                        <span class="text-gradient"><i class="fas fa-times"></i></span></a>
                                    </td> 
                                    <%}%>
                                    <td>
                                        <button class="btn-info mx-3" type="submit"><a href="/acc-details/<%= data._id %>">More Details...</a></button>
                                    </td>
                                </tr>
                        <% }) %>
                        <% } %> 
                </tbody>
            </table>
        </div>
     </form>
    </div> 
    </div>
    </div>
</main>
</body>
</html>