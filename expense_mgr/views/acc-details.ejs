<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Details</title>
    <%- include('./partials/header.ejs') %>
</head>
<body style="background-color: lightcyan">
  <div class="container" >
    <div class="filter col-md-6 mb-3 my-4">
        <a href="/home"><button class="gesture btn btn-info my-4"> <i class="fas fa-angle-double-left"></i> Home Page </button></a>
    </div>
  </div>
    <div class="container" >
        <div class="form-title-details text-center">
            <h2 class="text-dark my-5"><h1>Account Details</h1></h2>
        </div>
        <form action="/acc-details" method="post">
            <div id="account-table">
            <table class="table">
                <tbody>
                        <tr>
                            <td><%= result3.accountname %>  </td>

                            <% if(record.balance > 0) { %>
                              <td style="color: green;">Total Balance: <%= record.balance %></td>
                            <%} else {  %>
                              <td style="color: red;">Total Balance: <%= record.balance %></td>
                              <% } %>
                            <td style="color: green;">Income: <%= record.credit %> </td>
                            <td style="color: red;">Expense: <%= record.debit %> </td>
                        </tr>   
                </tbody>
              </table>
              <hr>
              <hr style="border-top: 3px solid greenyellow">

              <div class="container" >
                <div class="text-center">
              <table class="table">
                <thead>
                    <tr>
                      <th colspan="4">Transactions</th>
                      <th colspan="2">Members</th>
                    </tr>
                </thead>     
                <tbody style="background-color: lightcyan">
                    <tr>
                        <td colspan="4">
                            <table class="table" style="background-color: lightcyan">
                                  <tr>
                                      <th>Date</th>
                                      <th>Type</th>
                                      <th>Description</th>
                                      <th>Amount</th>
                                      <th colspan="2">Action</th>
                                  </tr>
                                <tbody >
                                  <% if(result1.length!=0){ result1.forEach(function(data){ %>
                                  <tr>
                                    <td><%= data.date %></td>
                                    <td><%= data.preferedtype %></td>
                                    <td><%= data.description %></td>
                                    <td><%= data.addamount %></td>
                                    <td><a href="/update-transc/<%= data.id %>" class="btn border-shadow update">
                                      <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                  </a></td>
                                  <td>
                                      <a href="/transaction/delete/<%= data._id %>" class="btn border-shadow update"
                                     onclick=" confirm('Are you sure you want to delete this record?')">
                                     <span class="text-gradient"><i class="fas fa-times"></i></span></a>
                                  </td> 
                                  </tr>
                                  <% }) %>
                                <% } %> 
                                <td>
                                  <button class="btn-info mx-3" type="submit"><a  href="/addtransc/<%= record.id %>">Add Transaction</a></button>
                                </td>
                                </tbody>
                            </table>
                        </td>
                        <td colspan="2">
                            <table class="table" style="background-color: lightcyan">
                                <tr>
                                    <th>Name</th>
                                </tr>
                              <tbody>
                                <% if(result2.length!=0){ result2.forEach(function(data1){ %>
                                <tr>
                                  <td><%= data1.name %></td>
                                <td>
                                   <button type="button" data-bs-toggle="modal" data-bs-target="#deleteConfirm<%= data1._id %>" style=" border: none;">
                                    <!-- <img id="icon" src="https://img.icons8.com/emoji/48/000000/wastebasket-emoji.png" /> -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                      <path fill-rule="evenodd" d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z"/>
                                      <path fill-rule="evenodd" d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z"/>
                                    </svg>
                                  </button>                                    
                                <div class="modal fade" id="deleteConfirm<%= data1._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>
                                                  Are you sure you want to delete this record?
                                                </p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <a href="/add-member/delete/<%= data1._id%>"><button type="button" class="btn btn-primary">Delete</button></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </td>  
                              </tr>
                              <% }) %>
                              <% } %> 
                              <td>
                                <button class="btn-info mx-3" type="submit"><a  href="/add-member/<%= record.id %>">Add Member</a></button>
                              </td>
                              </tbody>
                          </table>
                        </td>
                    </tr>
                </tbody>
                </tr>
        </table>
                </div>
              </div>
              </div>
        </form>
    </div>
    
    
</body>
</html>