<div class="container">
    <div class="box-nav d-flex justify-between"></div>
    <form method="POST" id="add_course" action="/insert">
     
    <div class = "form-group d-grid gap-3">
    <label>Course Name</label>
    <input type="text" maxlength="100" class="form-control" name="courseName" id="courseName" placeholder="Course Name" required>

    <div class = "form-group d-grid gap-3" >
    <label>Course Duration</label>
    <input type="text" maxlength="100" class="form-control" name="courseDuration" id="courseDuration" placeholder="Course Duration (Hrs)"  required>
    </div>

    <div class = "form-group d-grid gap-3" >
    <label>Course Fee</label>
    <input type="text" maxlength="100" class="form-control" name="courseFee" id="courseFee" placeholder="Course Fee (INR)" required>
    </div>
    </div>
    <br>
    <div class="form-group">
    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Add </button>
    </div>
    </form>
</div>
